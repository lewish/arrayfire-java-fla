common --enable_bzlmod

build --bes_results_url=https://app.buildbuddy.io/invocation/
build --bes_backend=grpcs://remote.buildbuddy.io
build --remote_cache=grpcs://remote.buildbuddy.io
build --remote_download_toplevel
build --remote_timeout=3600

build --javacopt="-XepExcludedPaths:.*/io_grpc_grpc_java/.*"
build --action_env=HOME
build --experimental_allow_tags_propagation
build --javacopt="--release 21"
build --javacopt="--enable-preview"
build --jvmopt="--enable-native-access=ALL-UNNAMED"
build --jvmopt="--enable-preview"
build --jvmopt="-ea"
build --java_language_version=21
build --java_runtime_version=21
build --tool_java_language_version=21
build --tool_java_runtime_version=21
build --nojava_header_compilation
build --output_groups=+mypy
build --remote_download_outputs=toplevel

test --build_tests_only
test --test_output=errors
test --jvmopt="-Djava.security.manager=allow"


try-import ~/.bazelrc
